<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.personOrInstitution">

<body>

<metal:title fill-slot="content-title">
      <metal:block define-macro="content-title">
        <tal:definitions define="user_admin view/checkUserPermission;
                                  object_number python: getattr(context, 'identification_identification_objectNumber', False)">

          <tal:admin_title tal:condition="user_admin">
            <tal:with_number tal:condition="object_number">
              <h1 class="documentFirstHeading" tal:content="python: object_number+ ' - ' +context.title">
                 Generic KSS Title. Is rendered with class="documentFirstHeading".
              </h1>
            </tal:with_number>
            
            <tal:without_number tal:condition="not:object_number">
              <h1 metal:use-macro="context/kss_generic_macros/macros/generic_title_view">
               Generic KSS Title. Is rendered with class="documentFirstHeading".
              </h1>
            </tal:without_number>
          </tal:admin_title>

          <tal:not_admin_title tal:condition="not:user_admin">
            <h1 metal:use-macro="context/kss_generic_macros/macros/generic_title_view">
               Generic KSS Title. Is rendered with class="documentFirstHeading".
            </h1>
          </tal:not_admin_title>

        </tal:definitions>
      </metal:block>
</metal:title>

<!--<tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>-->

<metal:main fill-slot="content-core" >
  <metal:content-core define-macro="content-core">
    
    <tal:permissions
      tal:define="user_admin view/checkUserPermission;
                  fieldset_restriction python:request.get('fieldset', None);"
    >
    <tal:notadmin tal:condition="not:user_admin">
      <div id="parent-fieldname-text">
        <div id="body-text">
          <p tal:condition="context/text" tal:content="structure python:context.text.output_relative_to(context.view)" tal:on-error="nothing"></p>
        </div>

        <div class="container object-container">
          <div class="object-fieldset row">
            
          </div>
        </div>
      </div>
  </tal:notadmin>

  <tal:admin tal:condition="user_admin">
    <div class="template-edit">
      <div id="content-core">

        <div id="ajax-error-msg" class="alert alert-warning" role="alert"></div>
    
        <form data-pat-autotoc="levels: legend; section: fieldset; className: autotabs" class="rowlike enableUnloadProtection enableFormTabbing pat-autotoc autotabs;" id="form">

        <tal:block tal:repeat="group view/groups">
       
        <fieldset
          tal:define="normalizeString nocall:context/@@plone/normalizeString;
                      fieldset_label group/label;
                      fieldset_name group/__name__|group/label/default|fieldset_label;
                      fieldset_text python:normalizeString(fieldset_name);
                      fieldset_name python:normalizeString(fieldset_name);"

            tal:attributes="id string:fieldset-${fieldset_name};
                          class string:formPanel;">
              
                <legend tal:condition="fieldset_label"
                        tal:attributes="id string:fieldset-${fieldset_name}"
                        tal:content="fieldset_label">Form name</legend>

                <p i18n:translate=""
                   tal:define="group_description group/description|nothing"
                   tal:condition="group_description"
                   tal:content="structure group_description">
                    Description
                </p>

                <tal:block tal:define="errors group/widgets/errors"
                           tal:condition="errors"
                           tal:repeat="error errors">
                    <div class="field error"
                        tal:condition="not:nocall:error/widget"
                        tal:content="structure error/render"
                    />
                </tal:block>
                <tal:block define="view nocall:group">
                    <metal:block use-macro="context/@@ploneform-macros/widget_rendering" />
                </tal:block> 
        </fieldset>
      
      </tal:block>

        </form>
      </div>
    </div>
  </tal:admin>
  </tal:permissions>
  </metal:content-core>
</metal:main>

</body>
</html>

