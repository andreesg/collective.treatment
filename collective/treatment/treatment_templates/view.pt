<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.treatment">

<body>

  <tal:facebook-opengraph metal:fill-slot="head_slot">
    <tal:definitions
      tal:define="details view/getFBdetails;
                  fb_image python: details['image'];
                  fb_title python: details['title'];
                  fb_type python: details['type'];
                  fb_site_name python: details['site_name'];
                  fb_url python: details['url'];
                  fb_description python: details['description']">
      
      <tal:fb-properties omit-tag="">
            <meta property="og:image" tal:attributes="content fb_image"/>
            <meta property="og:title" tal:attributes="content fb_title"/>
            <meta property="og:site_name" tal:attributes="content fb_site_name"/>
            <meta property="og:url" tal:attributes="content fb_url"/>
            <meta property="og:type" tal:attributes="content fb_type"/>
            <meta property="og:description" tal:attributes="content fb_description"/>
      </tal:fb-properties>
    </tal:definitions>
</tal:facebook-opengraph>

<!--  <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/> -->

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">
    
    <tal:permissions
      tal:define="user_admin view/checkUserPermission;
                  fieldset_restriction python:request.get('fieldset', None);"
    >
    <tal:notadmin tal:condition="not:user_admin">
      <div id="parent-fieldname-text">
        <div id="body-text">
          <p tal:condition="context/text" tal:content="structure python:context.text.output_relative_to(context.view)" ></p>
        </div>

        <div class="container object-container">
          <div class="object-fieldset">
            
          </div>
        </div>
      </div>
  </tal:notadmin>

  <tal:admin tal:condition="user_admin">
    <div class="template-edit">
      <div id="content-core">
    
        <form class="enableFormTabbing">

        <tal:block tal:repeat="group view/groups">
       
        <fieldset
          tal:define="normalizeString nocall:context/@@plone/normalizeString;
                      fieldset_label group/label;
                      fieldset_name group/__name__|group/label/default|fieldset_label;
                      fieldset_text python:normalizeString(fieldset_name);
                      fieldset_name python:normalizeString(fieldset_name);"

            tal:attributes="id string:fieldset-${fieldset_name};
                          class string:formPanel;">
              
                <legend tal:condition="fieldset_label"
                        tal:attributes="id string:fieldset-${fieldset_name}"
                        tal:content="fieldset_label">Form name</legend>

                <p i18n:translate=""
                   tal:define="group_description group/description|nothing"
                   tal:condition="group_description"
                   tal:content="structure group_description">
                    Description
                </p>

                <tal:block tal:define="errors group/widgets/errors"
                           tal:condition="errors"
                           tal:repeat="error errors">
                    <div class="field error"
                        tal:condition="not:nocall:error/widget"
                        tal:content="structure error/render"
                        />
                </tal:block>

                <tal:restriction tal:condition="python: fieldset_name == 'treatment_details'">
                  <tal metal:use-macro="view/context/@@collective.treatment.fieldsetmacro/private_view" />
                </tal:restriction>
        </fieldset>
      
      </tal:block>

        </form>
      </div>
    </div>
  </tal:admin>
  </tal:permissions>
  </metal:content-core>
</metal:main>

</body>
</html>
